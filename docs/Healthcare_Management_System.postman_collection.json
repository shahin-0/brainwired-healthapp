						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Dr. John Doe\",\n    \"specialization\": \"Cardiologist\",\n    \"email\": \"john.doe@example.com\",\n    \"phone\": \"+1234567890\",\n    \"password\": \"StrongP@ss123\"\n}"
