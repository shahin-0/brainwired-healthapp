							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/doctors/specialization/Cardiologist?page=0&size=10",
							"host": ["{{baseUrl}}"],
							"path": ["api", "doctors", "specialization", "Cardiologist"],
							"query": [
								{
									"key": "page",
									"value": "0"
								},
								{
									"key": "size",
									"value": "10"
								}
							]
						}
					}
				},
